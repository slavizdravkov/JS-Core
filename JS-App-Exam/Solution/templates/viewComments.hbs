<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{post.url}}">
                <img src="{{post.imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{post.url}}">
                    {{post.title}}
                </a>
            </div>
            <div class="details">
                <p>{{post.description}}</p>
                <div class="info">
                    submitted {{post.datestamp}} ago by {{post.author}}
                </div>
                {{#if post.isAuthor}}
                    <div class="controls">
                        <ul>
                            <li class="action"><a class="editLink" href="#/edit/:{{post._id}}">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#/delete/:{{post._id}}">delete</a></li>
                        </ul>
                    </div>
                {{/if}}

            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form id="commentForm" action="#/comments/:{{post._id}}" method="post">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#each postComments}}
        <article class="post post-content">
            <p>{{content}}</p>
            <div class="info">
                submitted {{datestamp}} ago by {{author}}
                {{#if isAuthor}}
                    | <a href="#/deletecomment/:{{_id}}" class="deleteLink">delete</a>
                {{/if}}
            </div>
        </article>
    {{/each}}
</section>